{
  // In order to skip format on save use ":noa w"
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "json",
    "jsonc",
    "python",
    "rust",
    "typescript",
    "typescriptreact",
    "typescript.tsx"
  ],
  "yaml.format.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "suggest.noselect": true,
  "python": {
    "formatting": {
      "provider": "black"
    },
    "linting": {
      "mypyEnabled": true,
      "pylintEnabled": true
    }
  },
  "rust-analyzer": {
    "server": {
      "path": "~/.cargo/bin/rust-analyzer"
    },
    "checkOnSave": {
      "command": "clippy"
    }
  },
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "yara": {
      "command": "yls",
      "args": ["-vv"],
      "filetypes": ["yara"]
    }
  }
}
